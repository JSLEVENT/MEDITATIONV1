{
  "name": "@serenity/db",
  "version": "0.0.1",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint src --max-warnings=0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "tsc -p tsconfig.json && node -r dotenv/config dist/migrate.js",
    "db:seed": "tsc -p tsconfig.json && node -r dotenv/config dist/seed.js"
  },
  "dependencies": {
    "drizzle-orm": "^0.33.0",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "drizzle-kit": "^0.24.0",
    "dotenv": "^16.4.5",
    "typescript": "^5.6.3"
  }
}
