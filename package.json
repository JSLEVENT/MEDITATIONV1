{
  "name": "serenity-ai",
  "private": true,
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "api:dev": "pnpm --filter @serenity/api dev",
    "web:dev": "pnpm --filter @serenity/web dev",
    "mobile:start": "pnpm --filter @serenity/mobile start",
    "db:generate": "pnpm --filter @serenity/db db:generate",
    "db:migrate": "pnpm --filter @serenity/db db:migrate",
    "db:seed": "pnpm --filter @serenity/db db:seed"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^1.12.5",
    "typescript": "^5.6.3"
  }
}
